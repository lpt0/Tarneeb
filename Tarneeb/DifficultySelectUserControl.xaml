<UserControl x:Class="Tarneeb.DifficultySelectUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tarneeb"
             mc:Ignorable="d" 
             d:DesignHeight="204" d:DesignWidth="560">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="24" />
                <Setter Property="FontWeight" Value="ExtraBold" />
                <Setter Property="Margin" Value="20" />
            </Style>
        </Grid.Resources>

        <Button x:Name="Easy" Click="Easy_Click">
            EASY
        </Button>

        <Button x:Name="Medium" Grid.Column="1" Click="Medium_Click">
            MEDIUM
        </Button>

        <Button x:Name="Hard" Grid.Column="2" Click="Hard_Click">
            HARD
        </Button>
    </Grid>
</UserControl>
